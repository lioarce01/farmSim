{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["express"]
  },
  "include": [
    "src/**/*",
    "src/types/express.d.ts",
    "src/utils/seedsGeneration.js",
    "src/utils/waterGeneration.js",
    "src/utils/updateSeedStatus.js"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}